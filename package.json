{
  "name": "chronoledger",
  "private": true,
  "packageManager": "yarn@4.12.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "yarn workspaces foreach -Apt run dev",
    "build": "yarn workspaces foreach -At run build",
    "test": "yarn workspaces foreach -At run test",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "yarn workspaces foreach -At run typecheck"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^25.0.3",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^17.0.0",
    "prettier": "^3.7.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.51.0"
  }
}
